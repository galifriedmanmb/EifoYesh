<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="250dp"
        android:id="@+id/appBarLayout">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mapFragmentContainer"
                app:layout_collapseMode="parallax">

            </LinearLayout>
            <!--
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                android:background="@drawable/profile_pic"
                android:id="@+id/profile_id"
                app:layout_collapseMode="parallax" />
-->
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffe5e5e5"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/nestedScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="4"
            android:layout_height="450dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/placeIV"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:background="@color/background" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/generalLO"
                android:layout_weight="1"
                android:background="@color/placeItemTitle"
                android:weightSum="2"
                android:padding="10dp">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/nameTV"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/generalLOinner"
                    android:layout_weight="1"
                    android:weightSum="5">

                    <TextView
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/ratingNumTV"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4">

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/ratingBar"
                            android:numStars="5"
                            android:stepSize="0.1"
                            style="@style/Widget.AppCompat.RatingBar.Indicator"
                            android:isIndicator="true"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/buttonsLO"
                android:layout_weight="1"
                android:weightSum="2"
                android:padding="10dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/buttonsLOFavoritesLO"
                    android:layout_weight="1"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:srcCompat="@drawable/favorite"
                        android:id="@+id/favoriteIV"
                        android:layout_weight="2" />

                    <TextView
                        android:text="@string/favorites"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/favoriteTV"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:textStyle="normal|bold"
                        android:textSize="18sp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/buttonsLOShareLO"
                    android:layout_weight="1"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:srcCompat="@drawable/share"
                        android:id="@+id/ShareIV"
                        android:layout_weight="2" />

                    <TextView
                        android:text="@string/share"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/shareTV"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:textStyle="normal|bold"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/addressLO"
                android:layout_weight="1"
                android:weightSum="3">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="7">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/marker"
                        android:id="@+id/markerIV"
                        android:layout_weight="1"
                        android:padding="5dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/addressTV"
                        android:layout_weight="6"
                        android:gravity="left|center_vertical" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="7">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/globe"
                        android:id="@+id/globeIV"
                        android:layout_weight="1"
                        android:padding="5dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/websiteTV"
                        android:layout_weight="6"
                        android:gravity="left|center_vertical" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="7">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/phone"
                        android:id="@+id/phoneIV"
                        android:layout_weight="1"
                        android:padding="5dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/phoneTV"
                        android:layout_weight="6"
                        android:gravity="left|center_vertical" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>